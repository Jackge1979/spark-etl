package com.yxt.bigdata.etl.connector.rdbms.reader

import collection.JavaConversions._
import com.typesafe.config.Config

object PredicatesParser {
  def parseCustomPredicates(predicatesConf: Config): Array[String] = {
    /*
    type: custom
     */
    predicatesConf.getStringList(Key.PREDICATES_RULES).toList.toArray
  }

  def parseLongFieldParser(predicatesConf: Config): (String, Long, Long, Int) = {
    /*
    type: long
     */
    val conf = predicatesConf.getConfig(Key.PREDICATES_RULES)
    val coulmnName = conf.getString("columnName")
    val lowerBound = conf.getLong("lowerBound")
    val upperBound = conf.getLong("upperBound")
    val numPatitions = conf.getInt("numPatitions")
    (coulmnName, lowerBound, upperBound, numPatitions)
  }
}
